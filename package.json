{
  "name": "@litejs/cli",
  "version": "21.9.0",
  "description": "Command line tools for LiteJS full-stack framework",
  "license": "MIT",
  "author": "Lauri Rooden <lauri@rooden.ee>",
  "keywords": [
    "litejs",
    "framework",
    "test",
    "cli",
    "bench"
  ],
  "homepage": "https://litejs.com",
  "repository": "github:litejs/cli",
  "bugs": "https://github.com/litejs/cli/issues",
  "main": "index.js",
  "files": [
    ".gitignore",
    "*.js",
    "cli"
  ],
  "bin": {
    "lj-doc": "./cli/doc",
    "lj-stat": "./cli/stat",
    "lj": "./index.js"
  },
  "litejs": {
    "build": false,
    "install": false,
    "lint": [
      "jshint *.js",
      "jshint cli/*.js"
    ],
    "test": "node -r ./test.js --allow-natives-syntax --expose-gc test/index.js --brief"
  },
  "jshintConfig": {
    "asi": true,
    "evil": true,
    "laxcomma": true,
    "maxdepth": 6,
    "quotmark": "double"
  }
}
