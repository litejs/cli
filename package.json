{
  "name": "@litejs/cli",
  "version": "23.2.0",
  "description": "Command line tools for LiteJS full-stack framework",
  "license": "MIT",
  "author": "Lauri Rooden <lauri@rooden.ee>",
  "keywords": [
    "litejs",
    "framework",
    "test",
    "cli",
    "bench"
  ],
  "homepage": "https://litejs.com",
  "repository": "github:litejs/cli",
  "bugs": "https://github.com/litejs/cli/issues",
  "main": "index.js",
  "files": [
    ".gitignore",
    "*.js",
    "cli"
  ],
  "scripts": {
    "test": "TZ='Europe/Tallinn' c8 -r lcov -r text-summary node -r ./test.js --allow-natives-syntax --expose-gc test/index.js --brief && jshint *.js cli/*.js"
  },
  "bin": {
    "lj-doc": "./cli/doc",
    "lj-stat": "./cli/stat",
    "lj": "./index.js"
  },
  "workspaces": [
    "test/dummy"
  ],
  "litejs": {
    "build": false,
    "install": false,
    "lint": false,
    "test": "node -r ./test.js --allow-natives-syntax --expose-gc test/index.js"
  },
  "jshintConfig": {
    "esversion": 5,
    "asi": true,
    "evil": true,
    "laxcomma": true,
    "maxdepth": 6,
    "node": true,
    "nonbsp": true,
    "undef": true,
    "unused": true,
    "quotmark": "double"
  }
}
