{
  "name": "@litejs/cli",
  "version": "23.12.0",
  "description": "Command line tools for LiteJS full-stack framework",
  "license": "MIT",
  "author": "Lauri Rooden <lauri@rooden.ee>",
  "keywords": [
    "litejs",
    "framework",
    "test",
    "cli",
    "bench"
  ],
  "homepage": "https://litejs.com",
  "repository": "github:litejs/cli",
  "files": [
    ".gitignore",
    "*.js",
    "cli"
  ],
  "scripts": {
    "test": "TZ='Europe/Tallinn' node ./index.js test test/index.js --coverage --sources='*.js' --brief --no-status",
    "lint": "jshint --config=.github/jshint.json *.js cli/*.js"
  },
  "dependencies": {
    "@litejs/dom": "23.12.1"
  },
  "bin": {
    "lj-doc": "./bin/doc",
    "lj-lint-json": "./bin/lint-json.js",
    "lj-stat": "./bin/stat",
    "lj": "./index.js"
  },
  "workspaces": [
    "test/dummy"
  ]
}
